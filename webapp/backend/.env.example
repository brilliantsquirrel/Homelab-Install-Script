# Homelab ISO Builder - Environment Configuration
# Copy this file to .env and fill in your values

# Server
NODE_ENV=production
PORT=8080

# Google Cloud Platform
GCP_PROJECT_ID=your-project-id
GCP_ZONE=us-west1-a
GCP_REGION=us-west1

# Google Cloud Storage
GCS_ARTIFACTS_BUCKET=homelab-iso-artifacts
GCS_DOWNLOADS_BUCKET=homelab-iso-downloads
GCS_SIGNED_URL_EXPIRATION=3600
ISO_RETENTION_DAYS=7

# VM Configuration
VM_MACHINE_TYPE=n2-standard-16
VM_BOOT_DISK_SIZE=500
VM_LOCAL_SSD_COUNT=2
MAX_CONCURRENT_BUILDS=3
BUILD_TIMEOUT_HOURS=4
VM_AUTO_CLEANUP=true

# Build Configuration
MAX_SERVICES_PER_BUILD=50
MAX_MODELS_PER_BUILD=10
MAX_ISO_SIZE_GB=150
POLL_INTERVAL_MS=10000

# Rate Limiting
RATE_LIMIT_MAX=10
BUILDS_PER_USER_PER_DAY=3

# Security
API_SECRET_KEY=generate-a-random-secret-key-here
CORS_ORIGINS=*

# Email Notifications (optional)
EMAIL_ENABLED=false
EMAIL_FROM=noreply@homelab-iso-builder.com
SENDGRID_API_KEY=

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
