# Homelab Environment Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control

# ========================================
# API Keys and Authentication
# ========================================

# Ollama API Key
OLLAMA_API_KEY=your-secure-api-key-here

# OpenWebUI Secret Key (used for session management)
WEBUI_SECRET_KEY=your-secure-secret-key-here

# LangChain API Key
LANGCHAIN_API_KEY=your-secure-api-key-here

# LangGraph API Key
LANGGRAPH_API_KEY=your-secure-api-key-here

# LangFlow API Key
LANGFLOW_API_KEY=your-secure-api-key-here

# ========================================
# N8N Configuration
# ========================================

# N8N Encryption Key (minimum 32 characters)
# Generate with: openssl rand -base64 32
N8N_ENCRYPTION_KEY=your-32-character-minimum-encryption-key-here

# N8N Admin Email
N8N_ADMIN_EMAIL=admin@example.com

# ========================================
# Qdrant Configuration
# ========================================

# Qdrant API Key for authentication
QDRANT_API_KEY=your-secure-qdrant-api-key-here

# ========================================
# Nginx Authentication
# ========================================

# Nginx Basic Auth Username
NGINX_AUTH_USER=admin

# Nginx Basic Auth Password (will be used to generate .htpasswd)
NGINX_AUTH_PASSWORD=your-secure-password-here

# ========================================
# SSL/TLS Configuration
# ========================================

# Enable HTTPS (true/false)
ENABLE_HTTPS=true

# SSL Certificate Path (if using existing certificates)
SSL_CERT_PATH=/etc/nginx/certs/cert.pem
SSL_KEY_PATH=/etc/nginx/certs/key.pem

# ========================================
# Database Configuration
# ========================================

# SQLite database directory (relative to user home)
SQLITE_DB_DIR=.local/share/homelab/databases

# Enable SQLite backups
SQLITE_BACKUP_ENABLED=true
SQLITE_BACKUP_PATH=.local/share/homelab/backups

# ========================================
# Logging and Monitoring
# ========================================

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Enable request logging
ENABLE_LOGGING=true

# ========================================
# Network Configuration
# ========================================

# Server hostname/domain
SERVER_HOSTNAME=homelab.local

# Server IP address (auto-detected if not specified)
# SERVER_IP=192.168.1.100

# ========================================
# Backup Configuration
# ========================================

# Enable automatic backups
ENABLE_BACKUPS=true

# Backup retention days
BACKUP_RETENTION_DAYS=7

# ========================================
# GPU Configuration (if using NVIDIA GPU)
# ========================================

# Enable GPU support in Ollama
ENABLE_GPU=false

# GPU device index (0 for first GPU)
GPU_DEVICE=0

# ========================================
# Performance Tuning
# ========================================

# Number of worker processes
WORKER_PROCESSES=auto

# Connection timeout (seconds)
CONNECTION_TIMEOUT=30

# Request timeout (seconds)
REQUEST_TIMEOUT=60
