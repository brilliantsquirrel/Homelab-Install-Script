# Homelab Environment Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control
#
# SECURITY NOTICE: This file contains sensitive credentials
# - Generate strong random values for all keys using: openssl rand -base64 32
# - DO NOT use default or placeholder values in production
# - Keep this file with restricted permissions (chmod 600 .env)
# - Back up securely and separately from the server

# ========================================
# CRITICAL: API Keys and Authentication
# GENERATE STRONG RANDOM VALUES FOR ALL OF THESE
# ========================================

# Ollama API Key - REQUIRED (generate: openssl rand -base64 32)
# Used for Ollama API authentication
OLLAMA_API_KEY=

# OpenWebUI Secret Key - REQUIRED (generate: openssl rand -base64 32)
# Used for OpenWebUI session management and data encryption
WEBUI_SECRET_KEY=

# LangChain API Key - REQUIRED (generate: openssl rand -base64 32)
# Used for LangChain service authentication
LANGCHAIN_API_KEY=

# LangGraph API Key - REQUIRED (generate: openssl rand -base64 32)
# Used for LangGraph service authentication
LANGGRAPH_API_KEY=

# LangFlow API Key - REQUIRED (generate: openssl rand -base64 32)
# Used for LangFlow service authentication
LANGFLOW_API_KEY=

# ========================================
# CRITICAL: N8N Configuration
# ========================================

# N8N Encryption Key - REQUIRED - MINIMUM 32 CHARACTERS
# Used to encrypt workflows and credentials stored in n8n
# Generate with: openssl rand -base64 32
# MUST be at least 32 characters long
N8N_ENCRYPTION_KEY=

# N8N Admin Email - REQUIRED
# Email address for n8n admin user
N8N_ADMIN_EMAIL=

# ========================================
# CRITICAL: Qdrant Configuration
# ========================================

# Qdrant API Key - REQUIRED (generate: openssl rand -base64 32)
# Used for Qdrant vector database authentication
QDRANT_API_KEY=

# ========================================
# CRITICAL: Nginx Authentication
# ========================================

# Nginx Basic Auth Username - REQUIRED
# Username for basic authentication on all protected services
NGINX_AUTH_USER=admin

# Nginx Basic Auth Password - REQUIRED
# Strong password for basic authentication (minimum 12 characters)
# Generate with: openssl rand -base64 32
NGINX_AUTH_PASSWORD=

# ========================================
# SSL/TLS Configuration
# ========================================

# Enable HTTPS (true/false)
ENABLE_HTTPS=true

# SSL Certificate Path (if using existing certificates)
SSL_CERT_PATH=/etc/nginx/certs/cert.pem
SSL_KEY_PATH=/etc/nginx/certs/key.pem

# ========================================
# Database Configuration
# ========================================

# SQLite database directory (relative to user home)
SQLITE_DB_DIR=.local/share/homelab/databases

# Enable SQLite backups
SQLITE_BACKUP_ENABLED=true
SQLITE_BACKUP_PATH=.local/share/homelab/backups

# ========================================
# Logging and Monitoring
# ========================================

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Enable request logging
ENABLE_LOGGING=true

# ========================================
# Network Configuration
# ========================================

# Server hostname/domain
SERVER_HOSTNAME=homelab.local

# Server IP address (auto-detected if not specified)
# SERVER_IP=192.168.1.100

# ========================================
# Backup Configuration
# ========================================

# Enable automatic backups
ENABLE_BACKUPS=true

# Backup retention days
BACKUP_RETENTION_DAYS=7

# ========================================
# GPU Configuration (if using NVIDIA GPU)
# ========================================

# Enable GPU support in Ollama
ENABLE_GPU=false

# GPU device index (0 for first GPU)
GPU_DEVICE=0

# ========================================
# Performance Tuning
# ========================================

# Number of worker processes
WORKER_PROCESSES=auto

# Connection timeout (seconds)
CONNECTION_TIMEOUT=30

# Request timeout (seconds)
REQUEST_TIMEOUT=60
